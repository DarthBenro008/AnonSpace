<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/incoming_profile_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_brightness_1_24"
        app:tint="@color/textColor" />

    <TextView
        android:maxWidth="300dp"
        android:id="@+id/incoming_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/incoming_message"
        android:padding="10dp"
        android:text="Hi, everyone. Nice to connect with you all"
        app:layout_constraintStart_toEndOf="@+id/incoming_profile_pic"
        app:layout_constraintTop_toTopOf="@+id/incoming_profile_pic" />

    <TextView
        android:id="@+id/incoming_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:02 pm"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/incoming_message"
        app:layout_constraintTop_toBottomOf="@+id/incoming_message" />

    <TextView
        android:id="@+id/incoming_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="anon_monkey"
        android:textColor="#797979"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/incoming_message"
        app:layout_constraintStart_toStartOf="@+id/incoming_message" />
</androidx.constraintlayout.widget.ConstraintLayout>